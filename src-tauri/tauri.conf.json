{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "CaffeineClipper",
    "version": "0.0.0"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/logo.png",
      "iconAsTemplate": true
    },
    "allowlist": {
      "globalShortcut": {
        "all": true
      },
      "fs": {
        "createDir": true,
        "readDir": true,
        "readFile": true,
        "writeFile": true,
        "scope": ["$APP", "$APP/**"]
      },
      "notification": {
        "all": true
      },
      "http": {
        "all": true
      },
      "path": {
        "all": true
      },
      "window": {
        "all": true
      },
      "clipboard": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/logo.png",
        "icons/logo.ico",
        "icons/logo1024.png",
        "icons/logo2400.png",
        "icons/logo.icns"
      ],
      "identifier": "dev.chand1012.caffeineclipper",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "CaffeineClipper",
        "width": 800,
        "label": "main"
      },
      {
        "fullscreen": false,
        "height": 600,
        "width": 800,
        "title": "Twitch Login",
        "label": "twitch-login",
        "resizable": true,
        "visible": false
      }
    ]
  }
}
